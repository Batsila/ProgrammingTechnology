@model EmployeeListViewModel
@{
    ViewData["Title"] = "EmployeeList";
}

<a class="btn btn-dark float-right" asp-area="" asp-controller="Home" asp-action="CreateEmployeeList">Create Employee</a>

<h1>Employee List</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">First name</th>
            <th scope="col">Last name</th>
            <th scope="col">Position</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Employees)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>
                    @item.FirstName
                </td>
                <td>
                    @item.LastName
                </td>
                <td>
                    @item.Position
                </td>
            </tr>
        }
    </tbody>
</table>
